{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2017",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": ".",
    "rootDir": "src",
    "baseUrl": "src"
  },
  "exclude": ["node_modules"]
}
